<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayoutTrangChu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabTextAppearance="@style/MyCustomTabText"
            android:background="@drawable/boder_nen"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Thao tác nhà trọ"
            android:layout_marginLeft="8dp"
            android:textColor="@color/mauChinhApp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="2">

            <LinearLayout
                android:id="@+id/taoHopDong"
                style="@style/Tablayout_Linner">

                <ImageView
                    style="@style/image_tabLayout"
                    android:src="@drawable/img_hopdong1" />

                <TextView
                    style="@style/textView_tabLayout"
                    android:text="Tạo Hợp Đồng"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/CocGiuCho"
                style="@style/Tablayout_Linner">

                <ImageView
                    style="@style/image_tabLayout"
                    android:src="@drawable/img_coctien1" />

                <TextView
                    style="@style/textView_tabLayout"
                    android:text="Cọc giữ chỗ" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/TraPhong"
                style="@style/Tablayout_Linner"
                android:layout_marginTop="10dp">

                <ImageView
                    style="@style/image_tabLayout"
                    android:src="@drawable/img_coctien1" />

                <TextView
                    style="@style/textView_tabLayout"
                    android:text="Trả phòng" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/TaoHopDong"
                style="@style/Tablayout_Linner"
                android:layout_marginTop="10dp">

                <ImageView
                    style="@style/image_tabLayout"
                    android:src="@drawable/img_coctien1" />

                <TextView
                    style="@style/textView_tabLayout"
                    android:text="Tạo hợp đồng" />
            </LinearLayout>
        </GridLayout>
        <TextView
            style="@style/textView_Tieude"
            android:text="Danh sách quản lý"
            />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="2">

            <LinearLayout
                android:id="@+id/dsPhongThue"
                style="@style/Tablayout_Linner">

                <ImageView
                    style="@style/image_tabLayout"
                    android:src="@drawable/img_hopdong1" />

                <TextView
                    style="@style/textView_tabLayout"
                    android:text="Danh sách phòng thuê"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dsKhachThue"
                style="@style/Tablayout_Linner">

                <ImageView
                    style="@style/image_tabLayout"
                    android:src="@drawable/img_coctien1" />

                <TextView
                    style="@style/textView_tabLayout"
                    android:text="Danh sách khách thuê" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dsHoaDon"
                style="@style/Tablayout_Linner"
                android:layout_marginTop="10dp">

                <ImageView
                    style="@style/image_tabLayout"
                    android:src="@drawable/img_coctien1" />

                <TextView
                    style="@style/textView_tabLayout"
                    android:text="Danh sách hóa đơn" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dsHopDong"
                style="@style/Tablayout_Linner"
                android:layout_marginTop="10dp">

                <ImageView
                    style="@style/image_tabLayout"
                    android:src="@drawable/img_coctien1" />

                <TextView
                    style="@style/textView_tabLayout"
                    android:text="Danh sách hợp đồng" />
            </LinearLayout>
        </GridLayout>

    </LinearLayout>




</ScrollView>